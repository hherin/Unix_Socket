server {
	listen 	8080
    error	./www/tester/error
	server_name	server1
	max_body	100

   
    location /put_test  {
		allow_method 	    PUT
		root 		./www/tester/2
	}
    location /post_body {
		allow_method 	    POST
		root 		./www/tester/3
		index 		index.html
		cgi			.bla
	}
    location /directory {
		cgi			.bla
		allow_method 	    GET POST
		root 		./www/tester/YoupiBanane/4
		index 		youpi.bad_extension
		cgi_path 	./www/CGI/ubuntu_cgi_tester
	}
}


server {
    listen 	8080
    error	./www/perso/error
	server_name	server2 localhost
	
    location / 		{
        root	./www/perso/5
		index	index.html
		allow_method	GET POST HEAD OPTIONS PUT
		cgi_path 	./www/CGI/ubuntu_cgi_tester
    }
    location /test	{
        root    ./www/perso/test/6
		index	index.html
		auto_index	0
		allow_method	GET POST HEAD OPTIONS PUT
    }
    location /auto_index	{
        root    ./www/perso/vide/7
		index	videvidevide
		auto_index	1
		allow_method	GET POST OPTIONS
    }
    location /no_auto_index	{
        root    ./www/perso/vide/8
		index	videvidevide
		auto_index	0
		allow_method	GET POST HEAD OPTIONS PUT
    }
    location /delete {
        root    	./www/perso/delete/9
		index		to_delete
		allow_method		OPTIONS DELETE
	}
    location /put_test  {
		allow_method 	    PUT
		root 		./www/tester/10
	}
    location /auth  {
		allow_method 	    PUT
		root 		./www/tester
		index		index.htm index.html
		auth 		user:pass
	}
    location /maxbody  {
		allow_method 	    PUT
		root 		./www/tester
		index		index.htm
		max_body	100
	}
	location /authe  {
		allow_method 	    HEAD PUT GET
		root 		./www/tester
		index		index.html
		auth 		user:pass
	}
	location /authen  {
		allow_method 	    PUT
		root 		./www/perso/
		auth 		user:pass
	}
	location /aut  {
		allow_method 	    PUT
		root 		./www/perso/
		index		index_test.html
		auth 		user:pass
	}
	location /autx  {
		allow_method 	    PUT
		root 		./www/tester/16
		auth 		user:pass
	}
}

