	server_name	sbfg
	host	localhostl

}

server {
    listen 	8082
    error	./www/perso/error
	server_name	post_server
	host	localhost
	
    location /	{
    	root    	./www/methods/post
		index		index.html
		allow_method	    POST GET TRACE CONNECT
		cgi_path 	./www/CGI/ubuntu_cgi_tester
		cgi			.cgi
    }
}

