server {
	listen 	8080
	error	./www/tester/error
	server_name	server1 server2 server3
	allow_method POST SELECT GET HEAD
	index		index.html

    location / 		{
        root	./www/perso
		index	index.html
		allow_method GET POST HEAD OPTIONS PUT
		cgi_path 	./www/CGI/ubuntu_cgi_tester
    }
    location /test	{
        root    ./www/perso/test
		index	index.html
		auto_index	0
		allow_method GET POST HEAD OPTIONS PUT
    }
    location /auto_index	{
        root    ./www/perso/vide
		index	videvidevide
		auto_index	1
		allow_method GET POST OPTIONS
    }
}

