server {
    listen 8080
    error ./www/tester/error
    server_name server1
    max_body 100


   
    location /put_test  {
        allow_method  PUT
        root  ./www/tester/2
    }
    location /post_body {
        allow_method  POST
        root  ./www/tester/3
        index  index.html
        cgi  .bla gg
    }
    location /directory {
        cgi  .bla gg
        allow_method  GET POST
        root  ./www/tester/YoupiBanane/4
        index  youpi.bad_extension
    }
}


