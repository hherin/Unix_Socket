#!/usr/bin/expect -f

set timeout -1

set args [lrange $argv 0 end]

set fd [open "ls_files"]
set filepath [split [read -nonewline $fd] "\n"]
close $fd

log_file expLog.log

foreach path $filepath {
    spawn ../webserv ../parser/test/conf > webLog.log
    spawn telnet {*}$args
    expect ".\r"
    set fdreq [open "$path"]
    set request [read $fdreq]
    send -- "$request\r"  
    close $fdreq
    sleep 1
}

log_file

expect eof